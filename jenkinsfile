pipeline {
    agent any
    
    

    stages {
    
     stage('Checkout') {
            steps {
                sh "echo 'Checkout....'"
                sh "rm -r dockerproject"
                sh "git clone 'https://github.com/gkerinel/dockerproject.git'"
            }
        }
    
    
    
    
        stage('Build') {
            steps {
                echo "'Building..'"
                sh "ls"
                sh "docker image build -t nginx:latest -f ./dockerproject/Dockerfile.txt ."
            }
        }
       
        stage('Deploy') {
            steps {
               sh "echo 'Deploying....'"
            
            sh ''' 
            export containerid=\$(docker ps -aqf name=nginx)
           if [ -n "$containerid" ]; then
              docker rm -f $containerid
           else
              echo "Containerid is empty"
           fi
            '''
            sh  "docker run -d --name nginx nginx:${BUILD_NUMBER}"
            
            }
        }
    }
}
