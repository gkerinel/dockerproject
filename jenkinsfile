pipeline {
    agent any
    
    

    stages {
    
     stage('Checkout') {
            steps {
                echo 'Checkout....'
                 git 'https://github.com/gkerinel/dockerproject.git'
            }
        }
    
    
    
    
        stage('Build') {
            steps {
                echo 'Building..'
                
                sh 'docker image build -t nginx:0.4 .'
            }
        }
       
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                
                sh 'docker run -d -p 8888:80 nginx:0.4'
            }
        }
    }
}
