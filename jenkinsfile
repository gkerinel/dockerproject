pipeline {
    agent any
    
    

    stages {
    
     stage('Checkout') {
            steps {
                sh "echo 'Checkout....'"
                sh "rm -r dockerproject"
                sh "git clone 'https://github.com/gkerinel/dockerproject.git'"
            }
        }
    
    
    
    
        stage('Build') {
            steps {
                echo "'Building..'"
                sh "ls"
                sh "docker image build -t nginx:latest -f ./dockerproject/Dockerfile.txt ."
            }
        }
       
        stage('Deploy') {
            steps {
                 sh ''' 
            export containerid=\$(docker ps -aqf name=nginx)
            docker stop $containerid 
            docker rm $containerid 
           
            '''
            sh "docker run -d -p 8888:80 --name enginx nginx:latest"
            }
        }
    }
}
