pipeline {
    agent any
    
    

    stages {
    
     stage('Checkout') {
            steps {
                sh "echo 'Checkout....'"
                sh "rm -r dockerproject"
                sh "git clone 'https://github.com/gkerinel/dockerproject.git'"
            }
        }
    
    
    
    
        stage('Build') {
            steps {
                echo "'Building..'"
                sh "ls"
                sh "docker image build -t nginx:latest -f ./dockerproject/Dockerfile.txt ."
            }
        }
       
        stage('Deploy') {
            steps {
                sh "echo 'Deploying....'"
            
            sh ''' 
            export containerid=\$(docker ps -aqf name=nginx)
            if [ "$( docker container inspect -f '{{.State.Running}}' )"== "true" ];then  
            
            docker stop $containerid 
            docker rm $containerid 
            fi
            '''
            sh "docker run -d --name nginx${BUILD_NUMBER} nginx:${BUILD_NUMBER}"
   
            }
        }
    }
}
